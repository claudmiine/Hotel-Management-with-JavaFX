         <image>
            <Image url="@../images/lobbyHotel.jpg" />
         </image>
      </ImageView>
      <AnchorPane layoutX="159.0" layoutY="74.0" prefHeight="270.0" prefWidth="298.0" style="-fx-background-color: #FEF5E7#FEF5E7;">
         <children>
            <Label alignment="CENTER" layoutX="119.0" layoutY="14.0" prefHeight="26.0" prefWidth="72.0" text="LOGIN">
               <font>
                  <Font name="System Font" size="18.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordField" layoutX="73.0" layoutY="156.0" promptText="Password" />
            <TextField fx:id="usernameField" layoutX="73.0" layoutY="93.0" promptText="Username" />
            <Label layoutX="124.0" layoutY="76.0" text="Username" />
            <Label layoutX="125.0" layoutY="135.0" text="Password" />
