         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </AnchorPane>
      <Button fx:id="cancelButton" layoutX="545.0" layoutY="378.0" mnemonicParsing="false" onAction="#cancelButtonOnAction" style="-fx-background-color: #CDB796#CDB796 #CDB796#CDB796;" text="Cancel" />
   </children>
</AnchorPane>
