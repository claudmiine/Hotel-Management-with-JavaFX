   <children>
      <ImageView fx:id="lobbyBackground" fitHeight="425.0" fitWidth="648.0" opacity="0.44" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/lobbyHotel.jpg" />
         </image>
      </ImageView>
      <AnchorPane prefHeight="405.0" prefWidth="285.0" style="-fx-background-color: #FEF5E7#FEF5E7;">
         <children>
            <ImageView fx:id="logoHotel" fitHeight="151.0" fitWidth="197.0" layoutX="27.0" layoutY="-22.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/logo.jpg" />
               </image>
            </ImageView>
            <Label fx:id="welcomeLabel" alignment="CENTER" layoutX="51.0" layoutY="101.0" prefHeight="25.0" prefWidth="154.0">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label alignment="CENTER" layoutX="40.0" layoutY="134.0" text="Please select the service">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
